<flynt-component 
  client:visible 
  name="BlockInterviewHeader" 
  class="
    interviewComponent 
    min-w-full lg:min-w-[83.3vw] h-[calc(100vh_-_104px)] lg:h-[calc(100vh_-_120px)] 
    flex justify-start align-top 
    pr-sm lg:pr-lg">
  <div class="flex flex-col lg:flex-row gap-sm">
    {% if post.thumbnail %}
    <div class="featuredImage w-full lg:w-1/2 grow-0 lg:grow">
      <img class="figure-image lazyload object-cover h-full max-h-[20vh] sm:max-h-[40vh] lg:max-h-full"
        src="{{ post.thumbnail.src }}"
        data-srcset="{{function('wp_get_attachment_image_srcset', post.thumbnail.id)}}"
        data-sizes="auto">
    </div>
    {% endif %}
    <div class="h-auto lg:h-[calc(100vh_-_120px)] w-full lg:w-1/2 grow flex flex-col justify-start lg:justify-between">
      <h1>{{ post.title }}</h1>
      <div class="lg:w-[33.3vw] flex flex-col gap-lg">
        <div>{{ post.artistBio|wpautop }}</div>
        <div class="flex flex-row gap-sm lg:gap-md">
          {% for panelOuter in post.repeaterOuter %}
            <div class="w-1/3 lg:w-auto grow flex flex-col align-top items-start justify-start" id="content-{{ loop.index }}">
              <div class="mb-sm">{{ panelOuter.title }}</div>
              {% for panelInner in panelOuter.repeaterInner %}
                <a class="inline-block no-underline hover:underline underline-offset-8 text-currentColor transition-all duration-200" href="{{ panelInner.socialLink.url|e }}" {% if panelInner.socialLink.target %} target="{{ panelInner.socialLink.target }}" rel="noreferrer noopener"{% endif %} alt="{{ panelInner.socialLink.alt|e }}" {% if panelInner.pageLink.target %} target="{{ panelInner.pageLink.target }}" rel="noreferrer noopener"{% endif %}>
                  {{ panelInner.socialLink.title|e }}
                </a>
              {% endfor %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</flynt-component>
