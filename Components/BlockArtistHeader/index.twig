<flynt-component client:visible name="BlockArtistHeader" class="">
  <div class="flex flex-col-reverse lg:flex-row gap-sm">
    <div class="h-auto lg:h-[calc(100vh_-_120px)] w-full lg:w-1/2 grow flex flex-col justify-between">
      <h1>{{ post.title }}</h1>
      <div class="lg:w-[33.3vw] flex flex-col gap-lg">
        <div>{{ post.artistBio|wpautop }}</div>
        <div class="flex flex-row gap-sm lg:gap-md">
          {% for panelOuter in post.repeaterOuter %}
            <div class="w-1/3 lg:w-auto grow flex flex-col align-top items-start justify-start" id="content-{{ loop.index }}">
              <div class="mb-sm">{{ panelOuter.title }}</div>
              {% for panelInner in panelOuter.repeaterInner %}
                <a class="inline-block no-underline hover:underline underline-offset-8 text-currentColor transition-all duration-200" href="{{ panelInner.socialLink.url|e }}" {% if panelInner.socialLink.target %} target="{{ panelInner.socialLink.target }}" rel="noreferrer noopener"{% endif %} alt="{{ panelInner.socialLink.alt|e }}" {% if panelInner.pageLink.target %} target="{{ panelInner.pageLink.target }}" rel="noreferrer noopener"{% endif %}>
                  {{ panelInner.socialLink.title|e }}
                </a>
              {% endfor %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
    {% if post.thumbnail %}
      <div class="featuredImage w-full lg:w-1/2 grow">
        <img class="figure-image lazyload object-cover h-auto lg:h-[calc(100vh_-_120px)]"
          src="{{ post.thumbnail.src }}"
          data-srcset="{{function('wp_get_attachment_image_srcset', post.thumbnail.id)}}"
          data-sizes="auto">
      </div>
    {% endif %}
    {# {% if post.post_excerpt %}
      <p class="h5">{{ post.post_excerpt }}</p>
    {% endif %} #}
    {# <div class="meta">
      <a class="author" href="{{ post.author.link|e('esc_url') }}">
        {% if post.author.avatar %}
          <img class="avatar" src="{{ post.author.avatar }}" alt="{{ post.author.name|e }}">
        {% endif %}
        <span class="visuallyHidden">{{ labels.postedBy|e }}</span>
        {{ post.author.name }}
      </a>
      <a class="category" href="{{ post.category.link|e('esc_url') }}">
        <span class="visuallyHidden">{{ labels.postedIn|e }}</span>
        {{ post.category }}
      </a>
      <time class="date" datetime="{{ post.post_date|date('c') }}">{{ post.post_date|date(dateFormat) }}</time>
      <span class="readingtime">{{ labels.readingTime|replace({'%d': post.content|readingtime})|e }}</span>
    </div> #}
  </div>
</flynt-component>
