<flynt-component 
  load:on="load" 
  name="BlockPostArchive" 
  class="archiveComponent 
  min-w-[60vw] lg:min-w-[30vw] min-h-full 
  flex justify-center align-middle 
  pb-md lg:pb-0 
  {# {% if addParallax %}rellax{% endif %}  #}
  {% if addAnimation %}animatedComponent{% endif %} 
  {% if selectAnimation %}{{ selectAnimation }}{% endif %}">
  {% for item in post %}
    <div class="relative h-full flex justify-center items-center">
      <a 
        href="{{ item.link }}" 
        class="w-full flex flex-col justify-center items-center" 
        aria-hidden="true">
        <img class="figure-image lazyload h-auto object-cover"
          src="{{ item.thumbnail.src }}"
          data-srcset="{{function('wp_get_attachment_image_srcset', item.thumbnail.id)}}"
          data-sizes="auto">
        <div class="w-full text-black">{{ item.title }}</div>
      </a>
    </div>
  {% endfor %}
</flynt-component>
