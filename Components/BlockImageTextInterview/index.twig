<flynt-component load:on="visible" name="BlockImageTextInterview" class="interviewComponent min-w-[75vw]">
  <div class="flex align-start justify-between gap-sm py-sm lg:px-lg lg:py-0" {{ imagePosition ? 'data-image-position="' ~ imagePosition ~ '"' }}>
    <div class="w-full">
      {% if image %}
      <img class="figure-image lazyload object-cover aspect-[2/1] h-auto max-h-[380px]"
        src="{{ image.src }}"
        data-srcset="{{function('wp_get_attachment_image_srcset', image.id)}}"
        data-sizes="auto"
        alt="{{ image.alt|e }}">
      {% endif %}
      {% if image.caption %}
        <figcaption>{{ image.caption|e }}</figcaption>
      {% endif %}
    </div>
    <div class="w-full">
      {{ contentHtml|e('wp_kses_post') }}
    </div>
  </div>
</flynt-component>
