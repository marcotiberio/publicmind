<!DOCTYPE html>
<html class="html {{ body_class }} horizontal page-{{ post.slug }}" id="theTop" lang="{{ site.language }}" {{ site.language_attributes }}>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="alternate" type="application/rss+xml" title="{{ site.title }} {{ __('Feed', 'flynt') }}" href="{{ site.rss2 | e('esc_url') }}">
    {{ function('wp_head') }}
  </head>
  <body>
    <a href="#mainContent" class="skipLink">
      {{ __("Skip to main content", "flynt") }}
    </a>
    {% block layout %}
      <div class="pageWrapper">
        <header>
          {% block header %}
            <div class="mainHeader fixed top-0 left-0 w-screen z-50 flex flex-row justify-between">
              {{ renderComponent('NavigationMain') }}
              {{ renderComponent('NavigationMainRight') }}
            </div>
            {# {{ renderComponent('NavigationBurger') }} #}
          {% endblock %}
        </header>
        <main id="mainContent" class="mainContent squares" aria-label="{{ __('Content', 'flynt') }}">
          {% if function('post_password_required') %}
            {{ function('get_the_password_form') }}
          {% else %}
            {% block content %}
              No <code>{{ '{% block content %}' }}</code> defined for this template.
            {% endblock %}
          {% endif %}
        </main>
        <footer class="mainFooter">
          <a href="{{ site.link|e('esc_url') }}" class="mainfooter fixed bottom-0 left-0 w-screen p-sm z-50 bg-white lg:bg-transparent grid grid-cols-12 sm:grid-cols-12 md:grid-cols-12 xl:grid-cols-12 gap-sm lg:gap-md">
            <div>p</div>
            <div></div>
            <div>u</div>
            <div>b</div>
            <div class="text-right">l</div>
            <div>i</div>
            <div>c</div>
            <div></div>
            <div class="text-right">m</div>
            <div>i</div>
            <div>n</div>
            <div class="text-right">d</div>
          </a>
        </footer>
      </div>
    {% endblock %}
    <div class="wpFooter">
      {{ function('wp_footer') }}
    </div>
  </body>
</html>
